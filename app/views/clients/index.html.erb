<p style="color: green"><%= notice %></p>

<div class="container  form-control border-2 mt-5" style="background-color: #e3f2fd;">
  <h1 class="fs-2 machine-font mt-2 mx-0 text-body-tertiary">Clients List</h1>

  <%= link_to "New client", new_client_path, class: "btn btn-primary ms-1 btn-secondary mb-3" %>

  <div id="clients">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <%= render client %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>


<div class="fs-5 machine-font mt-3 mx-0 btn btn-primary">
  <a class="text-white text-decoration-none" href="https://github.com/postre554/block_b">INFO</a>
</div>
<div class="fs-5 machine-font mt-3 mx-2 btn btn-warning">
  <a class="text-dark text-decoration-none" href="#">DOCUMENTACION</a>
</div>